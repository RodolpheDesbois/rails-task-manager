<div class="container">
  <h1>Task : <%= @task.title %></h1>
  <p>Description : <%= @task.details %></p>
  <li class="list-group-item">
    <% if @task.completed %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked disable>
        <label class="form-check-label" for="flexCheckChecked">
        This task is completed
        </label>
      </div>
    <% else %>
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" disable>
        <label class="form-check-label" for="flexCheckDefault">
        This task is not completed yet
        </label>
      </div>
    <% end %>
  </li>
  <br>
</div>
<div class="container">
  <button type="button" class="btn btn-light">
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </button>
</div>
<div class="container mt-3">
  <button type="button" class="btn btn-light">
  <%= link_to "Back to tasks", tasks_path(@tasks) %>
  </button>
</div>
